@model RolePermissionsViewModel

<h3>Permissions for Role "@Model.RoleName"</h3>

<form method="post" asp-controller="Roles" asp-action="RolePermissions" asp-route-roleId="@Model.RoleId">
    <table class="table table-striped">
        <thead>
            <tr>
                <td>
                    Group
                </td>
                <td>
                    Permission
                </td>
                <td>
                    Description
                </td>
                <td>
                    Status
                </td>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Permissions.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="@Model.Permissions[i].GroupName" type="hidden"/>
                        @Model.Permissions[i].GroupName
                    </td>
                    <td>
                        <input asp-for="@Model.Permissions[i].Name" type="hidden"/>
                        @Model.Permissions[i].Name
                    </td>
                    <td>
                        <input asp-for="@Model.Permissions[i].Description" type="hidden"/>
                        @Model.Permissions[i].Description
                    </td>
                    <td>
                        <input asp-for="@Model.Permissions[i].Value" type="hidden"/>
                        <input asp-for="@Model.Permissions[i].Active" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">
        Save
    </button>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mt-2 p-1 alert-success border rounded">
            @TempData["SuccessMessage"]
        </div>
    }
</form>